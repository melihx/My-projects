@model ReadABook.ViewModels.Home.LoginVM
@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "LOGIN";
}

<fieldset>
    <legend>Login</legend>
    <form action="/Home/Login" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">@Html.LabelFor(l => l.Username)</div>
                <div class="col-2">
                    @Html.TextBoxFor(l => l.Username)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(l => l.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(l => l.Password)</div>
                <div class="col-2">
                    @Html.PasswordFor(l => l.Password)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(l => l.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    @Html.ValidationMessage("authError", new { @style = "right" })
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Login" />
                </div>
            </div>
        </div>
    </form>
</fieldset>